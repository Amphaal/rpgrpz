{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Debug - 0. Create folders",
            "group": "test",
            "type": "shell",
            "command": "rm -rf _genDebug; mkdir _genDebug;"
        },
        {
            "label": "Debug - 2a. Generate Project files",
            "dependsOn": "Debug - 0. Create folders",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "type": "shell",
            "windows": {
                "command": "cmake -DCMAKE_TOOLCHAIN_FILE=../cmake/toolchains/clang-mingw64-win.cmake -GNinja -DCMAKE_BUILD_TYPE=Debug .."
            },
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            }
        },
        {
            "label": "Debug - 3. Build",
            "type": "shell",
            "command": "cmake --build ./_genDebug",
            "problemMatcher": []
        },
        {
            "label": "Zip for deploy",
            "type": "shell",
            "command": "cmake --build ./_genDebug --target zipForDeploy",
            "problemMatcher": []
        }
    ]
}