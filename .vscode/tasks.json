{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "0. Create folders",
            "group": "test",
            "type": "shell",
            "command": "rm -rf _genDebug; mkdir _genDebug;"
        },
        {
            "label": "1. Generate Project files",
            "dependsOn": "0. Create folders",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "type": "shell",
            "windows": {
                "command": "cmake -DCMAKE_TOOLCHAIN_FILE=../cmake/toolchains/clang-lld-mingw64-win.cmake -GNinja -DCMAKE_BUILD_TYPE=Debug .."
            },
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            }
        },
        {
            "label": "2. Build",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            },
            "problemMatcher": []
        },
        {
            "label": "A. Zip for deploy",
            "type": "shell",
            "command": "cmake --build ./_genDebug --target zipForDeploy",
            "problemMatcher": []
        }
    ]
}