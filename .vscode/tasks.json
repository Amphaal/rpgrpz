{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Debug - 0. Create build folder",
            "group": "test",
            "type": "shell",
            "command": "rm build/Debug -r -fo; mkdir build/Debug",
            "osx": {
                "command": "rm -rf build/Debug; mkdir build; mkdir build/Debug"
            }
        },
        {
            "label": "Debug - 1. Download vcpkg packages",
            "dependsOn" : "Debug - 0. Create build folder",
            "group": "test",
            "type": "shell",
            "command": "${env:VCPKG_ROOT}/vcpkg install miniupnpc openssl --triplet x64-windows; vcpkg integrate install",
            "options": {
                "cwd": "${workspaceRoot}/build/Debug"
            }
        },
        {
            "label": "Debug - 2a. Generate Project files",
            "dependsOn" : "Debug - 1. Download vcpkg packages",
            "group": {
                "isDefault": true,
                "kind" : "test"
            },
            "type": "shell",
            "command": "cmake -A x64 ../..",
            "options": {
                "cwd": "${workspaceRoot}/build/Debug"
            }
        },
        {
            "label": "Debug - 3. Build",
            "type": "shell",
            "command": "cmake --build ./build/Debug --config Debug"
        }
    ]
}