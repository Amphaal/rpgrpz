{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Debug - 0. Create folders",
            "group": "test",
            "type": "shell",
            "command": "rm -rf _genDebug; rm -rf _req; mkdir _genDebug; mkdir _req",
        },
        {
            "label": "Debug - 1a. Compile Sentry Native",
            "dependsOn": "Debug - 0. Create folders",
            "group": "test",
            "type": "shell",
            "command": "git clone https://github.com/getsentry/sentry-native.git --branch feature/c-ver",
            "options": {
                "cwd": "${workspaceRoot}/_req"
            }
        },
        {
            "label": "Debug - 1b. Generate Sentry Native project",
            "dependsOn": "Debug - 1a. Compile Sentry Native",
            "group": "test",
            "type": "shell",
            "command": "cmake -GNinja -DCMAKE_BUILD_TYPE=Debug .",
            "options": {
                "cwd": "${workspaceRoot}/_req/sentry-native"
            }
        },
        {
            "label": "Debug - 2a. Generate Project files",
            "dependsOn" : "Debug - 1b. Generate Sentry Native project",
            "group": {
                "isDefault": true,
                "kind" : "test"
            },
            "type": "shell",
            "command": "cmake -GNinja -DCMAKE_BUILD_TYPE=Debug ..",
            "options": {
                "cwd": "${workspaceRoot}/_genDebug"
            }
        },
        {
            "label": "Debug - 3. Build",
            "type": "shell",
            "command": "cmake --build ./_genDebug"
        }
    ]
}