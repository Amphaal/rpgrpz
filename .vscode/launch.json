    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "preLaunchTask": "Debug - 3. Build",
            "type": "cppdbg",
            "request": "launch",
            "program" : "",
            "windows": {
                "program": "${workspaceFolder}/_genDebug/bin/RPGRPZ.exe",
                "miDebuggerPath": "${env:MSYS2_ROOT}/mingw64/bin/gdb.exe"
            },
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "miDebuggerArgs": "--silent",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name" : "_NO_DEBUG_HEAP",
                    "value" : "1"
                },
                // {
                //     "name" : "GST_DEBUG",
                //     "value" : "5"
                // },
            ],
            "setupCommands": [
                {
                    "description": "Activer l'impression en mode Pretty pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Reduce gdb verbosity",
                    "text": "set print thread-events off",
                    "ignoreFailures": false
                }
            ]
        },
    ]
}