    "version": "0.2.0",
    "configurations": [
        {
            "name": "No Server",
            "type": "cppdbg",
            "program": "RPGRPZ.exe",
            "request": "launch",
            "args": ["--noServer --customContext=NoServer"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/bin",
            "environment": [],
            "osx": {
                "program": "${workspaceFolder}/build/Debug/bin/RPGRPZ.app/Contents/MacOS/RPGRPZ",
                "MIMode": "lldb"
            },
            "windows": {
                "type": "cppvsdbg"
            },
            "externalConsole": false
        },
        {
            "name": "Random No Server",
            "type": "cppdbg",
            "program": "RPGRPZ.exe",
            "request": "launch",
            "osx": {
                "program": "${workspaceFolder}/build/Debug/bin/RPGRPZ.app/Contents/MacOS/RPGRPZ",
                "MIMode": "lldb"
            },
            "windows": {
                "type": "cppvsdbg"
            },
            "args": ["--noServer --randomContext"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/bin",
            "environment": [],
            
            "externalConsole": false
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "program": "RPGRPZ.exe",
            "request": "launch",
            "osx": {
                "program": "${workspaceFolder}/build/Debug/bin/RPGRPZ.app/Contents/MacOS/RPGRPZ",
                "MIMode": "lldb",
                "environment": [{
                        "name" :"DYLD_IMAGE_SUFFIX",
                        "value": "_debug"
                }]
            },
            "windows": {
                "type": "cppvsdbg"
            },
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/bin",
            "environment": [],
            
            "externalConsole": false,
            "preLaunchTask": "Debug - 3. Build"
        },
        {
            "name": "Test",
            "type": "cppdbg",
            "program": "RPGRPZ.exe",
            "request": "launch",
            "osx": {
                "program": "${workspaceFolder}/build/Debug/bin/RPGRPZ.app/Contents/MacOS/RPGRPZ",
                "MIMode": "lldb"
            },
            "windows": {
                "type": "cppvsdbg"
            },
            "args": ["--test"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Debug/bin",
            "environment": [
                {
                    "name": "GST_DEBUG",
                    "value": "3"
